		if(option == 0) {
			prompt();
		}
		if(option == 1) {
			System.out.println("You have chose to exit the program. Have a good day!");
	}
	}
	public static void bookLookup() {
		Scanner input = new Scanner(System.in);
		
		String[] books = new String[4];
		books[0] = "God of Fury";
		books[1] = "Binding 13";
		books[2] = "The Deal";
		books[3] = "The Risk";

		String[] location = new String[4];
		location[0] = "Aisle A1";
		location[1] = "Aisle C1";
		location[2] = "Aisle E1";
		location[3] = "Aisle S1";
		
		String[] author = new String[4];
		author[0] = "Rina Kent";
		author[1] = "Chloe Walsh";
		author[2] = "Elle Kennedy";
		author[3] = "S.T. Abby";
		
		String[] genre = new String[4];
		genre[0] = "Dark Romance";
		genre[1] = "Comtemporary Romance";
		genre[2] = "Cometemporary Romance";
		genre[3] = "Thriller Romance";

		System.out.println("How would you like to conduct your search?");
		System.out.println("1) Author");
		System.out.println("2) Genre");
		System.out.println("3) Book title");
		int answer = input.nextInt();

		if(answer == 1) {
		System.out.println("Enter the first name of the author: ");
			String name = input.next();
			for(int i = 0; i < author.length; i++) {
				if(author[i].contains(name)) {
					System.out.println("Sweet! It looks like we do have work from that author! You can find them on " + location[i]);
				}
			}
		}
		else if(answer == 2) {			
			System.out.println("Enter the genre: ");
			String name1 = input.next();				
			for(int i = 0; i < genre.length; i++) {
				if(genre[i].contains(name1)) {
					System.out.println("Sweet! It looks like we do have books of that genre! You can find them on " + location[i]);
				}
			}
			}
		else if(answer == 3) {			
			System.out.println("Enter the book title: ");
			String name2 = input.next();			
			for(int i = 0; i < books.length; i++) {
				if(books[i].contains(name2)) {
					System.out.println("Sweet! It looks like we have that book! You can find it on " + location[i]);
			}
			}
		}
		System.out.println("Is there anything else you would like to complete today?(0 for yes 1 to quit the program)");
		int option = input.nextInt();

			if(option == 0) {
				prompt();
			}
			if(option == 1) {
				System.out.println("You have chosen to exit the program. Have a good day!");
		}
	}

	public static void prompt() {
		Scanner input = new Scanner(System.in);

		System.out.println("What action would you like to take today?");
		System.out.println("1) Add librarian/Edit Account");
		System.out.println("2) New membership/Edit Account");
		System.out.println("3) Book/Genre look up");
		int answer = input.nextInt();

		if(answer == 1) {
			addLibrarian();
		}
		if(answer == 2) {
			addMembership();
		}

		if(answer == 3) {
			bookLookup();
		}
	}
	}
