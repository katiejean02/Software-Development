	public static void addMembership() {
		Scanner input = new Scanner(System.in);

		String[] membership = new String[4];
		System.out.println("IF YOU ARE EDITING AN ACCOUNT ENTER ALL YOUR INFORMATION BELOW");

		System.out.println("Enter your first name: ");
		System.out.println("Enter your birthdate: ");
		System.out.println("Enter your contact information (email or phone number): ");
		System.out.println("Enter your address(with no spaces): ");

		for(int i = 0; i < membership.length; i++) {
			membership[i] = input.nextLine();
		}
		for(int j = 0; j < membership.length; j++) {
			System.out.println(membership[j] + " ");
			}
			System.out.println("Is this information correct?(0 for yes 1 for no)");
				int info = input.nextInt();

				if(info == 0) {
					System.out.println("Yay! You have completed adding a new membership!");
				}

				if(info == 1) {
					System.out.println("What information isn't correct?");
					System.out.println("1) Name");
					System.out.println("2) Birthdate");
					System.out.println("3) Contact Information");
					System.out.println("4) Address");
					int change = input.nextInt();
					
					if(change == 1) {
						System.out.println("Enter new name: ");
						membership[0] = input.next();
						
						for(int l = 0; l < membership.length; l++) {
							System.out.println(membership[l] + " ");
						}
					}
					if(change == 2) {
							System.out.println("Enter new bithdate: ");
							membership[1] = input.next();
							
							for(int m = 0; m < membership.length; m++) {
								System.out.println(membership[m] + " ");
							}
						}
						if(change == 3) {
							System.out.println("Enter new contact information: ");
							membership[2] = input.next();
							
							for(int n = 0; n < membership.length; n++) {
								System.out.println(membership[n] + " ");
							}
						}
						if(change == 4) {
							System.out.println("Enter a new address (with no spaces): ");
							membership[3] = input.next();
							
							for(int a = 0; a < membership.length; a++) {
								System.out.println(membership[a] + " ");
							}
						}
						System.out.println("Yay! You have successfully edited your account!");
					
						
						}
		System.out.println("Is there any other action you would like to take today?(0 for yes 1 to quit the program)");
